<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Views.ProductoEditarCrearPage"
             Title="Agregar / Editar">
    <ScrollView>
        <VerticalStackLayout Padding="12">
            <Entry Placeholder="Nombre" Text="{Binding Item.Name}" />
            <HorizontalStackLayout>
                <Entry Placeholder="Cantidad" Keyboard="Numeric" Text="{Binding Item.Quantity}" />
                <Entry Placeholder="Unidad" Text="{Binding Item.Unit}" />
            </HorizontalStackLayout>
            <Picker ItemsSource="{Binding Categories}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedCategory}" />
            <Button Text="Guardar" Command="{Binding SaveCommand}" />
            <Button Text="Cancelar" Command="{Binding CancelCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
