<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Views.SettingsPage"
             Title="Configuraci칩n">
    <ScrollView>
        <VerticalStackLayout Spacing="16"
                              SemanticProperties.Description="Configuraciones de la aplicaci칩n">
            <Label Text="Tema"
                   FontAttributes="Bold" />
            <Picker ItemsSource="{Binding ThemeOptions}"
                    SelectedItem="{Binding SelectedTheme}" />

            <Label Text="Orden de la lista"
                   FontAttributes="Bold" />
            <Picker ItemsSource="{Binding OrderOptions}"
                    SelectedItem="{Binding SelectedOrder}" />

            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Confirmar eliminaci칩n"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1"
                        IsToggled="{Binding ConfirmDeletion}" />
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Confirmar limpieza"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1"
                        IsToggled="{Binding ConfirmClear}" />
            </Grid>

            <Label Text="Tama침o de fuente"
                   FontAttributes="Bold" />
            <Slider Minimum="0.8"
                    Maximum="1.5"
                    Value="{Binding FontMultiplier}" />
            <Label Text="{Binding FontMultiplier, StringFormat=Multiplicador actual: {0:F1}}" />

            <Button Text="Guardar"
                    Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
