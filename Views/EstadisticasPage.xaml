<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Views.EstadisticasPage"
             Title="Estadísticas">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Label Text="Conteo por categoría" FontAttributes="Bold"/>
            <CollectionView ItemsSource="{Binding CountByCategory}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto" Padding="6">
                            <Label Text="{Binding Key}" />
                            <Label Text="{Binding Value}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
