<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Views.PlantillasPage"
             Title="Plantillas">
    <ScrollView>
        <VerticalStackLayout Spacing="16"
                              SemanticProperties.Description="GestiÃ³n de plantillas">
            <Label Text="Nombre de la plantilla"
                   FontAttributes="Bold" />
            <Entry Text="{Binding TemplateName}"
                   Placeholder="Ej. Fin de semana"
                   MaxLength="80" />
            <Button Text="Guardar plantilla"
                    Command="{Binding SaveCommand}" />
            <Button Text="Nueva"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource PrimaryColor}"
                    Command="{Binding StartNewCommand}" />

            <CollectionView ItemsSource="{Binding Templates}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12"
                               Margin="0,4"
                               CornerRadius="12"
                               BackgroundColor="{DynamicResource CardBackgroundColor}">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  ColumnSpacing="12">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Items.Count, StringFormat=Productos: {0}}" />
                                </StackLayout>
                                <Button Grid.Column="1"
                                        Text="Cargar"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ApplyCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Grid.Column="2"
                                        Text="ðŸ—‘"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource PrimaryColor}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
