<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Views.PlantillasPage"
             Title="Plantillas">
    <VerticalStackLayout Padding="12">
        <Entry Placeholder="Nombre plantilla" Text="{Binding NewName}" />
        <Button Text="Guardar plantilla (desde la lista actual)" Command="{Binding SaveCurrentAsTemplateCommand}" />
        <CollectionView ItemsSource="{Binding Templates}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="6" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}" />
                        <Button Text="Aplicar" Grid.Column="1" Command="{Binding Source={RelativeSource AncestorType={x:Type local:PlantillasPage}}, Path=BindingContext.ApplyTemplateCommand}" CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
