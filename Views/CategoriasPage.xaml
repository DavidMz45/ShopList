<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShopList.Views"
             x:Class="ShopList.Views.CategoriasPage"
             Title="Categorías">
    <VerticalStackLayout Padding="12">
        <Entry Placeholder="Nueva categoría" Text="{Binding NewName}" />
        <Button Text="Agregar" Command="{Binding AddCommand}" />
        <CollectionView ItemsSource="{Binding Categories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="6" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}" />
                        <Button Text="Eliminar" Grid.Column="1" Command="{Binding Source={RelativeSource AncestorType={x:Type local:CategoriasPage}}, Path=BindingContext.DeleteCommand}" CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
